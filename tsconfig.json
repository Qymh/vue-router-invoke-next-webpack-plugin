{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES5",
    "lib": ["ES2015", "ES2016", "ES2017"],
    "module": "ESNext",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
